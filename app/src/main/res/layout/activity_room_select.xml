<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomSelectActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backBt"
        android:src="@drawable/back"/>

    <TextView
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/titleTv"
        android:textSize="30sp"
        android:textStyle="italic"
        android:textColor="#2196F3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="치킨"/>

    <TextView
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:id="@+id/contentTv"
        android:layout_below="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="굽네치킨 먹을사람~~"
        android:textSize="25sp"/>

    <TextView
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:id="@+id/feeTv"
        android:layout_below="@+id/contentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배달료 4000원"
        android:textSize="25sp"/>

    <TextView
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:id="@+id/deadlineTv"
        android:layout_below="@+id/feeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마감시간 18:02"
        android:textSize="25sp"/>

    <TextView
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:id="@+id/numberTv"
        android:layout_below="@+id/deadlineTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모집인원 2/4"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/chatBt"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="채팅방 참가하기"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>